# Discord Bot Credentials
DISCORD_TOKEN=your_discord_bot_token_here
DISCORD_CLIENT_ID=your_discord_client_id_here
DISCORD_CLIENT_SECRET=your_discord_client_secret_here

# MongoDB Configuration - REQUIRED FOR NEW FEATURES
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/minfoai?retryWrites=true&w=majority

# AI Configuration
AI_MODEL=huggingface  # Options: 'openai', 'huggingface', 'local'
OPENAI_API_KEY=your_openai_api_key_here  # Only if using OpenAI
HUGGINGFACE_API_KEY=your_huggingface_api_key_here  # Only if using HuggingFace

# Bot Configuration
BOT_PREFIX=!
BOT_STATUS=with /help | Powered by AI
NODE_ENV=production

# Features Configuration
ENABLE_GAMIFICATION=true
ENABLE_MODERATION=true
ENABLE_MUSIC=true
ENABLE_GIVEAWAY=true
ENABLE_VERIFICATION=true
ENABLE_AI_CHAT=true  # NEW - Enable AI interactions

# Logging
LOG_LEVEL=info  # Options: 'error', 'warn', 'info', 'debug'
LOG_FILE=./logs/bot.log

# Advanced Settings
MAX_COMMAND_COOLDOWN=3
WARNING_EXPIRE_DAYS=30
XP_MULTIPLIER=1

# Webhooks (Optional)
ERROR_WEBHOOK_URL=
LOG_WEBHOOK_URL=
